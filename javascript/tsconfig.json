{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
